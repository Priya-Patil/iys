<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="edittext_white" >
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/colorWhite</item>

    </style>

    <style name="edittextGreyLarge" parent="edittext_white">
        <item name="android:background">@drawable/linear_layout_grey</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/offWhite</item>

    </style>


    <style name="MyCustomTheme"  parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:padding">0dp</item>


    </style>


</resources>
