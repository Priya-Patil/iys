<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notice_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netist.mygirlshostel.NoticeDetailsActivity"
    android:background="#fff">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/admin_panel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="200dp"
                android:fitsSystemWindows="true"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:background="@drawable/picture"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/offWhite"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:text="Notice Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textIsSelectable="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/offWhite"
                    android:layout_marginTop="5dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/image_panel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_download_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Image"
                            android:layout_marginLeft="5dp"
                            android:textIsSelectable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delete_image_panel"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <TextView
                            android:text="Delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_delete_download_image"
                            android:textIsSelectable="true"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/delete_pdf_panel"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:text="Delete "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_delete_pdf"
                            android:textIsSelectable="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/document_panel"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right">
                        <TextView
                            android:text="Files"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_download_file"
                            android:textIsSelectable="true"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/offWhite"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/tv_details"
                    android:text="Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:text="DateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date_time"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textIsSelectable="true"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/admin_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_delete_notice"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete Notice"
            android:textColor="#fff"
            android:background="@color/colorAccent"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>

        <Button
            android:id="@+id/btn_resend_notice"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resend Notice"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</RelativeLayout>
