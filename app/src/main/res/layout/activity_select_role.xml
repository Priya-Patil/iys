<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/txtTitleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Select Role"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <View
            android:id="@+id/viewNotification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">



        <androidx.cardview.widget.CardView
            android:id="@+id/cv_Trust"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cv_adv"
            android:background="@drawable/shape_test">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="-8dp"
                android:background="@drawable/ic_group_black_24dp"
                android:padding="20dp"
                android:backgroundTint="@color/colorPrimary"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="4dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Management"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_trust"
                    />

                <TextView
                    android:id="@+id/tv33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here!.."
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_trust"


                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_Principal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_test"

            android:layout_below="@+id/cv_Trust"
            >


            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="-8dp"
                android:background="@drawable/process"
                android:padding="20dp"
                android:backgroundTint="@color/colorPrimaryDark"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="4dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service provider / Owner"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_notice"
                    />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here!.."
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_notice"


                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_teacher"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_test"
            android:layout_below="@id/cv_Principal"
            >


            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="-10dp"
                android:background="@drawable/reading_book__1_"
                android:backgroundTint="@color/colorPrimaryDark" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="4dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client / User / Student"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_expenses"
                    />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here!.."
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_expenses"


                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_parents"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_test"

            android:layout_below="@+id/cv_teacher"
            android:layout_marginBottom="60dp"
            android:visibility="gone">


            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="-10dp"
                android:background="@drawable/ic_planning"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="4dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parents"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_enquiry"
                    />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here!.."
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_enquiry"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_adv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_test">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="-8dp"
                android:background="@drawable/ic_image_black_24dp"
                android:padding="20dp"
                android:backgroundTint="@color/colorPrimary"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="4dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertisement"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_advertise"
                    />

                <TextView
                    android:id="@+id/tv_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here!.."
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_advertise"


                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib_email"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            android:src="@drawable/ic_email_black_24dp"
            android:visibility="visible"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib_twitter"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            android:src="@drawable/ic_phone_black_24dp"
            android:visibility="visible"/>

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/ib_facebook"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            android:src="@drawable/facebookfilled"
            android:visibility="gone"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib_instagram"
            android:layout_width="38dp"
            android:visibility="gone"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            android:src="@drawable/instagramfilled" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib_whatsapp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            android:src="@drawable/whatsappfilled" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib_linkedin"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            android:src="@drawable/linkedinfilled"
            android:visibility="gone"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib_telegram"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:elevation="5dp"
            android:src="@drawable/ic_share_black_24dp"
            />

    </LinearLayout>

</RelativeLayout>